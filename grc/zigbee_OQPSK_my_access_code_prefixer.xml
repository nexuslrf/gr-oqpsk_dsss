<?xml version="1.0"?>
<block>
  <name>Access Code Prefixer</name>
  <key>zigbee_OQPSK_my_access_code_prefixer</key>
  <category>[zigbee_OQPSK]</category>
  <import>import zigbee_OQPSK</import>
  <make>zigbee_OQPSK.my_access_code_prefixer($pad, $preamble)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Pad</name>
    <key>pad</key>
    <value>0x00</value>
    <type>hex</type>
  </param>
  <param>
		<name>Preamble</name>
		<key>preamble</key>
		<value>0x000000a7</value>
		<type>hex</type>
	</param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>message</type>
  </source>
</block>
